{
    "autoImportComponentScript": true,
    "diagnosticFilters": [
        {
            "codes": [
                1013
            ],
            "src": "tests/**/*.bs"
        },
        {
            "codes": [
                1107
            ],
            "src": "**/roku_modules/**/*"
        },
        {
            "codes": [
                1107
            ],
            "src": "components/TestScene.xml"
        }
    ],
    "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "!tests/**/*.*"
    ],
    "lintConfig": "bsconfig/bslint.jsonc",
    "plugins": [
        "@rokucommunity/bslint"
    ],
    "retainStagingFolder": true,
    "rootDir": "../src/",
    "stagingFolderPath": "dist/roku-deploy-staging",
    "username": "rokudev",
    "require": ["ts-node/register"]
}