<?xml version="1.0" encoding="UTF-8"?>
<component
    name="SGFlex"
    extends="Group"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd"
>
    <interface>
        <field id="width" type="integer" value="-1" alwaysNotify="true"/>
        <field id="height" type="integer" value="-1" alwaysNotify="true"/>

        <!-- "row"|"column" -->
        <field id="direction" value="row" type="string" alwaysNotify="true"/>
        <!-- "flexStart"|"flexEnd"|"center"|"spaceBetween"|"spaceAround"|"spaceEvenly" -->
        <field id="justifyContent" value="flexStart" type="string" alwaysNotify="true"/>
        <!-- "flexStart"|"flexEnd"|"center" -->
        <field id="alignItems" value="flexStart" type="string" alwaysNotify="true"/>

        <field id="flexifyOnce" value="false" type="boolean" alwaysNotify="true"/>

        <function name="flexify" />
    </interface>
</component>